<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/lighsalmon</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="detail"  >
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="header"  >
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="system"  >
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="welcome"  >
        <item name="android:textSize">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Topics"  >
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn1">
        <item name="android:background">@color/salmon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="btn2">
        <item name="android:background">@color/turquoise</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="btn3">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="thai">
        <item name="android:fontFamily">@font/itim</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
